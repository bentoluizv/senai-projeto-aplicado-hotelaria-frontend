<header
  class="bg-zinc-800 text-zinc-200 flex flex-col md:flex-row items-center justify-center gap-6 p-4">
  <div
    class="flex flex-col gap-2 md:flex-row w-full items-center justify-center">
    <div class="w-full md:w-2/6 gap-2 flex justify-between items-center">
      <h2 class="text-xl w-full text-center rounded-md font-bold">
        <a href="/">Quinta do Ypuã</a>
      </h2>
      <button
        id="hamburger"
        class="hamburger md:hidden flex flex-col justify-between w-11 h-7"
        aria-label="Toggle navigation">
        <span
          class="block w-full h-[3px] bg-amber-400 rounded transition-transform duration-300"
        ></span>
        <span
          class="block w-full h-[3px] bg-amber-400 rounded transition-opacity duration-300"
        ></span>
        <span
          class="block w-full h-[3px] bg-amber-400 rounded transition-transform duration-300"
        ></span>
      </button>
    </div>
    <nav
      id="nav"
      class="bg-zinc-800 gap-3 md:py-2 md:px-4 md:w-5/6 shadow-md items-center justify-center md:justify-end md:gap-4 flex-col hidden md:flex md:flex-row md:shadow-none rounded-md">
      <a
        class="nav_link hover:text-amber-400 transition-colors"
        href="/hospedes">Hóspedes</a
      >
      <a
        class="nav_link hover:text-amber-400 transition-colors"
        href="/acomodacoes">Acomodações</a
      >
      <a
        class="nav_link hover:text-amber-400 transition-colors"
        href="/reservas">Reservas</a
      >
    </nav>
  </div>
  <div
    class="w-full md:w-[340px] flex flex-col justify-center items-center md:justify-end md:items-end">
    <a
      href="/reservas/cadastro"
      class="w-full bg-amber-400 text-zinc-800 font-bold py-2 px-4 rounded-md hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 text-center">
      Faça uma reserva
    </a>
  </div>
</header>

<style>
  /* Hamburger transforms */
  .hamburger.active span:nth-child(1) {
    transform: rotate(44deg) translate(12px, 12px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Mobile navigation menu (custom toggle behavior) */
  #nav.active {
    display: flex !important; /* Overrides Tailwind's hidden class */
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("hamburger");
    const nav = document.getElementById("nav");

    // Toggle menu on click
    hamburger?.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      nav?.classList.toggle("active");
    });

    // Highlight active nav link
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll(".nav_link");

    navLinks.forEach((link) => {
      if (currentPath.startsWith(link.getAttribute("href") as string)) {
        link.classList.add("text-amber-400", "font-black");
      }
    });
  });
</script>
