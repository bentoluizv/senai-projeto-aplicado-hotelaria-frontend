---
type Props = {
  id: string;
  label: string;
  options: string[];
  disabled?: boolean;
  selected?: string;
};

const { id, label, options, disabled, selected } = Astro.props;
---

<div class="flex w-full flex-col p-2">
  <label for={id}>{label}</label>
  <select
    class="appearance-none p-2 border border-zinc-300 rounded"
    name={id}
    id={id}
    {disabled}>
    <option selected={!selected} disabled>Selecione</option>
    {
      options.map((option) => {
        return <option selected={selected === option}>{option}</option>;
      })
    }
  </select>
</div>
