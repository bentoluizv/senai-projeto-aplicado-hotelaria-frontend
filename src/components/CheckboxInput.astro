---
type Props = {
  id: string;
  label: string;
  disabled?: boolean;
  checked?: boolean;
};

const { id, label, disabled, checked } = Astro.props;
---

<section class="flex items-center gap-2">
  <input
    class="w-1/4 h-5"
    type="checkbox"
    id={id}
    name={label}
    disabled={disabled}
    checked={checked}
  />
  <label for={id}>{label}</label>
</section>
