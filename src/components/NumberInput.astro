---
type Props = {
  id: string;
  label: string;
  value?: string;
  disabled?: boolean;
};

const { id, label, value, disabled } = Astro.props;
---

<div class="flex flex-col p-2 w-full">
  <label for={id}>{label}</label>
  <input
    class="appearance-none p-2 border border-zinc-300 rounded"
    type="number"
    id={id}
    name={id}
    required
    value={value}
    disabled={disabled}
  />
</div>
