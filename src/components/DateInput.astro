---
type Props = {
  id: string;
  label: string;
  value?: string;
  disabled?: boolean;
  required?: boolean;
  min?: string;
};

const { id, label, value, disabled, min, required } = Astro.props;
---

<div class="flex flex-col p-2 w-full">
  <label for={id}>{label}</label>
  <input
    class="p-2 border border-zinc-300 rounded"
    type="date"
    id={id}
    name={id}
    required
    value={value}
    disabled={disabled}
    min={min}
    required={required}
  />
</div>
