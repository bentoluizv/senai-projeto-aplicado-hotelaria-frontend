---
import type { Accommodation } from "../schemas/accommodation";

type Props = {
  accommodation: Accommodation;
};

const { props } = Astro;

const { accommodation } = props;
const { name, price, total_guests, single_beds, double_beds, amenities } =
  accommodation;
---

<div
  id={accommodation.ulid}
  class="accommodation_card flex-shrink-0 grid md:grid-cols-4 text-sm bg-white shadow-lg rounded-lg border focus:outline-none focus:ring-4 focus:ring-amber-400 m-2"
  tabindex="0">
  <div class="px-6 py-4 flex flex-col justify-center">
    <h2 class="text-xl font-bold text-gray-800">
      {name}
    </h2>
  </div>

  <div class="px-6 py-4 flex flex-col justify-center">
    <p class="text-gray-700">
      <span class="font-semibold">Preço: </span>R$ {price.toFixed(2)}
    </p>
    <p class="text-gray-700">
      <span class="font-semibold">Total de Hóspedes: </span>{total_guests}
    </p>
    <p class="text-gray-700">
      <span class="font-semibold">Cama Solteiro:</span>
      {single_beds}
    </p>
    <p class="text-gray-700">
      <span class="font-semibold">Cama Casal:</span>
      {double_beds}
    </p>
  </div>

  <div class="px-6 py-4 flex flex-col justify-center">
    <p class="text-gray-700 font-semibold">Amenidades:</p>
    <ul class="flex flex-wrap gap-2 mt-2">
      {amenities.map((amenitie) => <li>{amenitie.name}</li>)}
    </ul>
  </div>

  <div class="circular-btn hidden px-6 py-4 flex-col justify-center items-end">
    <button
      class="w-12 h-12 bg-amber-500 text-white font-bold rounded-full shadow-lg flex items-center justify-center hover:bg-amber-600 hover:scale-110 active:scale-95 transition-transform">
      Ir
    </button>
  </div>
</div>
